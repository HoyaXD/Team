<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.green.seenema.mapper.SalesMapper">
	<!-- 영화 예매율 높은 순으로 조회 -->
	<select id="getMovieSales" resultType="org.green.seenema.vo.MovieVO">
		SELECT * FROM seenema.movie_tbl 
		ORDER BY hit DESC;
	</select>
	
	<!-- 상품 판매율 높은 순으로 조회 -->
	<select id="getProductSales" resultType="org.green.seenema.vo.ProductVO">
		SELECT * FROM seenema.product_tbl 
		ORDER BY productSales DESC;
	</select>
	
	<!-- 영화 예매율 높은 top5 조회 -->
	<select id="getMovieTopfive" resultType="org.green.seenema.vo.MovieVO">
		SELECT * FROM seenema.movie_tbl 
		ORDER BY hit DESC limit 5;
	</select>
	
	<!-- 상품 판매율 높은 top5 조회 -->
	<select id="getProductTopfive" resultType="org.green.seenema.vo.ProductVO">
		SELECT * FROM seenema.product_tbl 
		ORDER BY productSales DESC limit 5;
	</select>

	
	
</mapper>