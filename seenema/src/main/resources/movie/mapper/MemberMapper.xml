<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.green.seenema.mapper.MemberMapper">
    <select id="loginCheck" resultType = "int">
        SELECT COUNT(*) FROM member_tbl WHERE id = #{id} AND pw = #{pw}
    </select>

    <select id="idCheck" resultType = "int">
        SELECT COUNT(*) FROM member_tbl WHERE id = #{id}
    </select>

    <insert id="regMember">
        INSERT INTO member_tbl VALUES(#{id}, #{pw}, #{name}, #{tel}, #{gender}, #{birthday}, 'C')
    </insert>
</mapper>
